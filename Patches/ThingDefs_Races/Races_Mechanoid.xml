<Patch>

    <!-- Lancer and scyther (shoddy 31%) -->
    <Operation Class="PatchOperationAddModExtension">
        <xpath>*/ThingDef[defName="Mech_Lancer" or defName="Mech_Scyther"]</xpath>
        <value>
            <li Class="Codename_Project_RIM.MechanoidReducerExtension">
                <spawnedPawnKind>Squirrel</spawnedPawnKind>
                <countRange>
                    <min>3</min>
                    <max>4</max>
                </countRange>
                <manhunterChance>1</manhunterChance>
            </li>
        </value>
    </Operation>

    <!-- Centipede -->
    <Operation Class="PatchOperationAddModExtension">
        <xpath>*/ThingDef[defName="Mech_Centipede"]</xpath>
        <value>
            <li Class="Codename_Project_RIM.MechanoidReducerExtension">
                <spawnedPawnKind>Muffalo</spawnedPawnKind>
                <countRange>
                    <min>1</min>
                    <max>1</max>
                </countRange>
                <manhunterChance>0.8</manhunterChance>
            </li>
        </value>
    </Operation>

</Patch>